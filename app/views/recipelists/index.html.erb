<div class="">
  <div class="">
    <h1>Recipes</h1>
    <%= link_to "Add New Recipe", new_recipelist_path, class: '' %>
</div>

  <div>
    <% @recipelists.each do |recipe| %>
      <% if current_user.id == recipe.user_id %>
        <%= link_to recipe_path(recipe), class: "" do %>
          <%= render recipe %>
        <% end %>
      <% else %>
        <%= link_to public_recipes_path(recipe), class: "" do %>
          <%= render recipe %>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>
