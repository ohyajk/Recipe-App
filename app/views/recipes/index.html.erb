<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Recipes</h1>
    <%= link_to "Add New Recipe", new_user_recipe_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
  </div>

  <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @recipes.each do |recipe| %>
      <% if current_user.id == recipe.user_id %>
        <%= link_to user_recipes_path(recipe), class: "block bg-white rounded-lg shadow hover:shadow-md" do %>
          <%= render recipe %>
        <% end %>
      <% else %>
        <%= link_to public_recipes_path(recipe), class: "block bg-white rounded-lg shadow hover:shadow-md" do %>
          <%= render recipe %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
