<div class="rounded-lg p-4 mb-4 flex justify-start items-center" style="border: 2px solid black;">
  <div>
    <h3 class="text-xl font-bold mb-2">
    <%= link_to user_recipe_path(recipe.user, recipe), class:"text-gray-900 hover:text-gray-600 no-underline" do %>
      <%= recipe.name %>
    <% end %>
  </h3>
  <% if current_user.id == recipe.user_id %>
    <%= button_to "Remove", user_recipe_path(recipe.user, recipe), method: :delete, class:"inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 mb-2"%>
  <% end %>
  </div>
  <div class="flex items-center text-right ml-28">
    <div class="w-full sm:w-auto">
      <p class="text-gray-700">
        <%# <strong>Description:</strong> %>
        <%= recipe.description %>
      </p>
    </div>
  </div>
</div>
