<h1>New Food</h1>

<%= form_for @foodlist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :measurement_unit %>
  <%= f.text_field :measurement_unit %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
  <%= f.submit "Create Food" %>
<% end %>
